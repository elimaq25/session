<div >
  <div >

    <h1>REGISTER</h1>
    <br />
    <form
     
      action='/register'
      method='post'
      role='form'
      autocomplete='off'
    >

      <div>
        <input
          id='username'
          name='username'
          placeholder='mail'
          class='form-control'
          type='text'
          required
        />
      </div>

      <div >
        <input
          id='password'
          name='password'
          placeholder='password'
          class='form-control'
          type='text'
          required
        />
      </div>


      <div >
        <input  type='submit' value='Register' />
      </div>
    </form>

    <hr />

    <div>
      <button  onclick="location.href = '/login'">Ir
        a Login</button>
    </div>

  </div>
</div>